<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Fondo de la splash screen -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Imagen animada que aparecerá en la splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/splash</item>

        <!-- El tema que se aplicará después de la splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Androidchallenge1</item>
    </style>

    <style name="Theme.Androidchallenge1" parent="android:Theme.Material.Light.NoActionBar" />
</resources>